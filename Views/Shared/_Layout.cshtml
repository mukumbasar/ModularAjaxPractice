<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ModularAjaxPractice</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ModularAjaxPractice.styles.css" asp-append-version="true" />
    <style>
        body {
            background-color: lightblue;
        }
        #partialModel
        {
            background-color: lightblue;
        }
    </style>
</head>
<body>
        <nav class="navbar navbar-expand-lg">
            <div class="container px-4 px-lg-5">
                <p class="navbar-brand" href="#!">Modular Ajax Practice</p>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
            </div>
        </nav>
        <header class="bg-dark py-2">
            <div class="container px-2 px-lg-1 my-5">
                <div class="text-center text-white">
                    <h5 class="display-4 fw-bolder">Datas</h5>
                </div>
            </div>
        </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - ModularAjaxPractice
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
